---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';


const url = new URL('/api/auth/userinfo', 'http://localhost:8080');

const sessionCookie = Astro.cookies.get("session");

const res = await fetch(url.toString(), {
    method: "POST",
    body: sessionCookie?.value || ""
});

console.log(res);

let user;

if (res.ok) {
    user = await res.json();
} else {
    user = { error: "Not authenticated" };
}
---
<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
<body>
<Header />
<main>
    <div class="account-info">
        <h1>Account</h1>

        {user.error ? (
                <p>{user.error}</p>
        ) : (
                <>
                    <p><strong>Username:</strong> {user.username}</p>
                    <p><strong>Email:</strong> {user.email}</p>
                    <p><strong>ID:</strong> {user.id}</p>
                    <p><strong>Roles:</strong> {user.roles.join(', ')}</p>
                </>
        )}
    </div>

    <div class="butto">
        <form method="post" action="http://localhost:3000/api/auth/signout">
            <button type="submit" name="Logout">Logout</button>
        </form>
    </div>
</main>
<Footer />
</body>
</html>

<style>
    body{
        align-content: center;
    }
    .butto button{
        padding: 0.7rem 1.2rem;
        border: 2px solid #5a77e2;
        border-radius: 8px;
        background: linear-gradient(90deg, #5a77e2 60%, #7e9be6 100%);
        color: #fff;
        font-weight: 600;
        font-size: 1.08rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background 0.2s, color 0.2s;
        box-shadow: none;
     }
    .button:hover{
        background: #e6edfa;
        color: #223;
    }

</style>
