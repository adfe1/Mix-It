---
import MixItLayout from '../layouts/MixIt-Layout.astro';
import SavedDrinks from '../pages/api/Savedrinks.jsx';
---

<MixItLayout title="Saved Drinks" description="Your saved cocktails">
	<main>
		<h1>My Saved Drinks</h1>
		<SavedDrinks client:load />
	</main>
</MixItLayout>

<style>
		.saved-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
			gap: 2rem;
		}

		.card {
			border: 1px solid #ccc;
			padding: 1rem;
			border-radius: 0.5rem;
			background: #fff;
		}

		img {
			border-radius: 0.5rem;
			width: 100%;
			height: auto;
		}
	</style>
</MixItLayout>
