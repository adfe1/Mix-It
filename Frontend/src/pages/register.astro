---
import MixItLayout from "../layouts/MixIt-Layout.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

let message = "";
let email = "";
let password = "";
let username = "";
let role = [];

if (Astro.request.method === "POST") {
    const form = await Astro.request.formData();
    email = form.get("email") || "";
    password = form.get("password") || "";
    username = form.get("username") || "";
    role = ["user"];

    const response = await fetch("http://localhost:8080/api/auth/signup", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email, password, username, role }),
    });

    if (response.ok) {
        message = "Registrierung erfolgreich!";
    } else {
        const error = await response.text();
        message = `Fehler: ${error}`;
    }
}
---

<MixItLayout description="Register" title="Register">
    <html lang="en">
    <body>
    <main>
        <div class="Register">
            <h2>Register</h2>
            <form method="post">
                <label for="email">E-Mail:</label>
                <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="E-Mail-Adresse"
                        value={email}
                        required
                        autocomplete="email"
                        autofocus
                />

                <label for="password">Password:</label>
                <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Passwort"
                        minlength="4"
                        maxlength="12"
                        value={password}
                        required
                        autocomplete="new-password"
                />

                <label for="username">Username:</label>
                <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="Username"
                        value={username}
                        required
                        autocomplete="username"
                />

                <button type="submit">Registrieren</button>
            </form>

            {message && <p>{message}</p>}
        </div>
    </main>
    </body>
    </html>
</MixItLayout>



<style>
    .Register {
        max-width: 350px;
        margin: 3rem auto;
        padding: 2rem 2.5rem;
        border-radius: 16px;
        background: #f8fafc;
        border: 2px solid #e2e8f0;
        box-shadow: 0 6px 24px rgba(0,0,0,0.08);
        text-align: left;
    }

    .Register h2 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #22223b;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .Register form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .Register label {
        font-size: 1rem;
        color: #4a4e69;
        margin-bottom: 0.2rem;
    }

    .Register input[type="email"],
    .Register input[type="text"],
    .Register input[type="password"] {
        padding: 0.6rem 0.8rem;
        border: 1.5px solid #bfc9d1;
        border-radius: 8px;
        font-size: 1rem;
        background: #fff;
        transition: border 0.2s;
    }

    .Register input[type="email"]:focus,
    .Register input[type="text"]:focus,
    .Register input[type="password"]:focus {
        border: 1.5px solid #5a77e2;
        outline: none;
    }

    .Register button {
        margin-top: 1.2rem;
        padding: 0.7rem;
        border: none;
        border-radius: 8px;
        background: linear-gradient(90deg, #5a77e2 60%, #7e9be6 100%);
        color: #fff;
        font-weight: 600;
        font-size: 1.08rem;
        cursor: pointer;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(90,119,226,0.10);
    }

    .Register button:hover {
        background: linear-gradient(90deg, #4a5fd0 60%, #5a77e2 100%);
    }

</style>
